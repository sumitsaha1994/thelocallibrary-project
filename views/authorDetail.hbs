<h1>Author: {{author.name}}</h1>
<p>{{author.lifespan}}</p>
<div style='margin-left:20px;margin-top:20px'>
    <h4>Books</h4>
    {{#if author_books.length}}
    <dl>
        {{#each author_books}}
        <dt>
            <a href={{url}}>{{title}}</a>
        </dt>
        <dd>{{summary}}</dd>
        {{/each}}
    </dl>
    {{else}}
    <p>No books available</p>
    {{/if}}
</div>
<hr>
<p><a href="{{author.url}}/update">Update author</a></p>
<p><a href="{{author.url}}/delete">Delete author</a></p>