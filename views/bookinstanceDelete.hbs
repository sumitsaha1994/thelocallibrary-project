<h1>{{title}}</h1>
<p><strong>Do you really want to delete this BookInstance?</strong></p>
<div style="margin-left:20px">
    <p><strong>ID: </strong>{{bookinstance._id}}</p>
    <p>
        <strong>Title: </strong>
        <a href={{bookinstance.book.url}}>{{bookinstance.book.title}}</a>
    </p>
    <p><strong>Imprint: </strong>{{bookinstance.imprint}}</p>
    <p>
        <strong>Status: </strong>
        {{#if (isEqual bookinstance.status 'Available') }}
        <span class="text-success">{{bookinstance.status}}</span>
        {{else if (isEqual bookinstance.status "Maintenance") }}
        <span class="text-danger">{{bookinstance.status}}</span>
        {{else}}
        <span class="text-warning">{{bookinstance.status}}</span>
        {{/if}}
    </p>
    {{#if (isEqual bookinstance.status 'Available') }}
    <p><strong>Due back: </strong>{{bookinstance.due_back}}</p>
    {{/if}}
</div>

<form action="" method="POST">
    <div class="form-group">
        <input type="hidden" id="id" class="form-control" name="id" required value="{{bookinstance._id}}">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
</form>